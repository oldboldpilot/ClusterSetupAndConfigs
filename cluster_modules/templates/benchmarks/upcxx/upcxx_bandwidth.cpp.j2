        cout << "=========================" << endl;
        cout << "Number of processes: " << nprocs << endl;
        cout << "Iterations per size: " << iterations << endl;
        cout << endl;
        
        for (size_t size : sizes) {
            // Allocate source buffer on rank 0
            upcxx::global_ptr<char> src_buf = upcxx::new_array<char>(size);
            
            // Broadcast destination pointer from rank 1
            upcxx::global_ptr<char> dst_buf = upcxx::broadcast(upcxx::global_ptr<char>{}, 1).wait();
            
            vector<double> bandwidths;
            
            // Measure bandwidth to rank 1
            for (int i = 0; i < iterations; i++) {
                auto start = high_resolution_clock::now();
                
                // Copy data from rank 0 to rank 1 using rput
                upcxx::rput(src_buf.local(), dst_buf, size).wait();
                
                auto end = high_resolution_clock::now();
                
                double time_sec = duration_cast<nanoseconds>(end - start).count() / 1e9;
                double bandwidth_mbps = (size / (1024.0 * 1024.0)) / time_sec;
                bandwidths.push_back(bandwidth_mbps);
            }
            
            // Calculate statistics using C++23 ranges and algorithms
            std::sort(bandwidths.begin(), bandwidths.end());
            double min_bw = *std::min_element(bandwidths.begin(), bandwidths.end());
            double max_bw = *std::max_element(bandwidths.begin(), bandwidths.end());
            double median_bw = bandwidths[bandwidths.size() / 2];
            double avg_bw = std::reduce(bandwidths.begin(), bandwidths.end(), 0.0) / bandwidths.size();
            
            cout << "Message size: " << size << " bytes (" << (size / 1024.0) << " KB)" << endl;
            cout << "  Min bandwidth:    " << fixed << setprecision(2) << min_bw << " MB/s" << endl;
            cout << "  Max bandwidth:    " << max_bw << " MB/s" << endl;
            cout << "  Avg bandwidth:    " << avg_bw << " MB/s" << endl;
            cout << "  Median bandwidth: " << median_bw << " MB/s" << endl;
            cout << endl;
            
            upcxx::delete_array(src_buf);
        }
    } else if (rank == 1) {
        // Rank 1 allocates receive buffers and broadcasts pointers
        for (size_t size : sizes) {
            upcxx::global_ptr<char> dst_buf = upcxx::new_array<char>(size);
            
            // Broadcast destination pointer to rank 0
            upcxx::broadcast(dst_buf, 1).wait();
            
            // Wait for rank 0 to complete measurements
            upcxx::barrier();
            
            upcxx::delete_array(dst_buf);
        }
    } else {
        // Other ranks just participate in barriers
        upcxx::barrier();
    }
    
    upcxx::barrier();
    upcxx::finalize();
}

