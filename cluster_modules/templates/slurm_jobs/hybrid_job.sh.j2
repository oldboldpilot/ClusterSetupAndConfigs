#!/bin/bash
#SBATCH --job-name={{ job_name }}
#SBATCH --nodes={{ num_nodes }}
#SBATCH --ntasks={{ num_tasks }}
#SBATCH --ntasks-per-node={{ tasks_per_node }}
#SBATCH --cpus-per-task={{ cpus_per_task }}
#SBATCH --time={{ time_limit }}
#SBATCH --partition={{ partition }}
#SBATCH --output={{ output_file }}
#SBATCH --error={{ error_file }}

# Hybrid MPI+OpenMP Job Script Generated by ClusterSetupAndConfigs
# Author: Olumuyiwa Oluwasanmi
# Framework: OpenMPI 5.0.8 + OpenMP (libomp)

echo "======================================"
echo "Hybrid MPI+OpenMP Job: {{ job_name }}"
echo "======================================"
echo "Job ID: $SLURM_JOB_ID"
echo "Nodes: {{ num_nodes }}"
echo "MPI Tasks: {{ num_tasks }}"
echo "Tasks per node: {{ tasks_per_node }}"
echo "OpenMP threads per task: {{ threads_per_task }}"
echo "CPUs per task: {{ cpus_per_task }}"
echo "Total parallelism: {{ num_tasks }} * {{ threads_per_task }} = {{ num_tasks * threads_per_task }}"
echo "Start time: $(date)"
echo "======================================"
echo ""

# Load environment
export PATH=/home/linuxbrew/.linuxbrew/bin:$PATH
export LD_LIBRARY_PATH=/home/linuxbrew/.linuxbrew/lib:$LD_LIBRARY_PATH

# MPI configuration
export OMPI_MCA_btl_tcp_if_include=192.168.1.0/24
export OMPI_MCA_oob_tcp_if_include=192.168.1.0/24

# OpenMP configuration
export OMP_NUM_THREADS={{ threads_per_task }}
export OMP_PROC_BIND=true
export OMP_PLACES=cores

echo "Environment:"
echo "  OMP_NUM_THREADS=$OMP_NUM_THREADS"
echo "  OMP_PROC_BIND=$OMP_PROC_BIND"
echo "  OMP_PLACES=$OMP_PLACES"
echo ""

# Run hybrid MPI+OpenMP application
echo "Executing: {{ executable }} {{ args }}"
echo ""

srun --mpi=pmix \
     --cpus-per-task={{ cpus_per_task }} \
     {{ executable }} {{ args }}

EXIT_CODE=$?

echo ""
echo "======================================"
echo "Job completed with exit code: $EXIT_CODE"
echo "End time: $(date)"
echo "======================================"

exit $EXIT_CODE
